@model IEnumerable<SpendingTracker.Models.Transaction>
@{
    ViewData["Title"] = "العمليات";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">العمليات</h4>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="fas fa-plus ms-1"></i>
        إضافة
    </a>
</div>

<!-- Filters (Stacked for Mobile) -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2">

            <div class="col-12">
                <label class="form-label small">من تاريخ</label>
                <input type="date" name="startDate" class="form-control form-control-sm" value="@ViewBag.StartDate" />
            </div>

            <div class="col-12">
                <label class="form-label small">إلى تاريخ</label>
                <input type="date" name="endDate" class="form-control form-control-sm" value="@ViewBag.EndDate" />
            </div>

            <div class="col-12">
                <label class="form-label small">بحث</label>
                <input type="text" name="search" class="form-control form-control-sm"
                       placeholder="ابحث في الوصف..."
                       value="@ViewBag.Search" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary w-100 btn-sm">
                    <i class="fas fa-filter ms-1"></i>
                    تصفية
                </button>
            </div>

        </form>
    </div>
</div>

<!-- Desktop Table -->
<div class="card d-none d-md-block">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>التاريخ</th>
                        <th>الوصف</th>
                        <th class="text-end">المبلغ</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date.ToString("dd MMM yyyy")</td>
                            <td>@item.Description</td>
                            <td class="text-end text-danger fw-bold">
                                @item.Amount.ToString("N2") ريال
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <form asp-action="Delete"
                                      asp-route-id="@item.Id"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Mobile Cards -->
<div class="d-md-none">
    @if (!Model.Any())
    {
        <div class="text-center text-muted py-4">
            لا توجد عمليات
        </div>
    }

    @foreach (var item in Model)
    {
        <div class="card mb-2 shadow-sm">
            <div class="card-body p-3">

                <div class="d-flex justify-content-between">
                    <strong>@item.Description</strong>
                    <span class="text-danger fw-bold">
                        @item.Amount.ToString("N2") ريال
                    </span>
                </div>

                <div class="text-muted small mt-1">
                    @item.Date.ToString("dd MMM yyyy")
                </div>

                <div class="mt-2 d-flex gap-2">
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary w-50">
                        تعديل
                    </a>

                    <form asp-action="Delete"
                          asp-route-id="@item.Id"
                          method="post"
                          class="w-50"
                          onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger w-100">
                            حذف
                        </button>
                    </form>
                </div>

            </div>
        </div>
    }
</div>