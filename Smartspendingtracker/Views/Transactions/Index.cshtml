@model IEnumerable<SpendingTracker.Models.Transaction>
@using SpendingTracker.Helpers
@{
    ViewData["Title"] = "العمليات";
    var settings = ViewBag.Settings as Smartspendingtracker.Models.UserSettings;
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">العمليات</h4>
    <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3">
        <i class="fas fa-plus ms-1"></i>
        إضافة
    </a>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-3">
    <div class="card-body p-3">
        <form method="get">
            <div class="mb-2">
                <label class="form-label small text-muted mb-1">من تاريخ</label>
                <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
            </div>

            <div class="mb-2">
                <label class="form-label small text-muted mb-1">إلى تاريخ</label>
                <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
            </div>

            <div class="mb-3">
                <label class="form-label small text-muted mb-1">بحث</label>
                <input type="text" name="search" class="form-control" placeholder="ابحث في الوصف..." value="@ViewBag.Search" />
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-filter ms-1"></i>
                تصفية
            </button>
        </form>
    </div>
</div>

<!-- Transactions List -->
@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
            <p class="text-muted mb-0">لا توجد عمليات</p>
        </div>
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card border-0 shadow-sm mb-2">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="flex-grow-1">
                        <h6 class="mb-1">@item.Description</h6>
                        <small class="text-muted">
                            <i class="fas fa-calendar-day ms-1"></i>
                            @item.Date.ToString("dd-MM-yyyy")
                        </small>
                    </div>
                    <h5 class="mb-0 text-danger">@CurrencyHelper.FormatAmount(item.Amount, settings)</h5>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary flex-fill">
                        <i class="fas fa-edit ms-1"></i>
                        تعديل
                    </a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="flex-fill"
                          onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                            <i class="fas fa-trash ms-1"></i>
                            حذف
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
}