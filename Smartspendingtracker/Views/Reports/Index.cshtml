@{
    ViewData["Title"] = "تقارير المصروفات";
}

<h2 class="mb-4">تقارير المصروفات</h2>

<!-- الفلاتر -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">من تاريخ</label>
                <input type="date" name="startDate" class="form-control"
                       value="@ViewBag.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4">
                <label class="form-label">إلى تاريخ</label>
                <input type="date" name="endDate" class="form-control"
                       value="@ViewBag.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-chart-bar me-2"></i>عرض التقرير
                </button>
            </div>
        </form>
    </div>
</div>

<!-- بطاقة الملخص -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase">إجمالي المصروفات</h6>
                        <h2>@ViewBag.TotalSpent.ToString("N2") ريال</h2>
                        <small>
                            @ViewBag.StartDate.ToString("dd MMM yyyy")
                            -
                            @ViewBag.EndDate.ToString("dd MMM yyyy")
                        </small>
                    </div>
                    <i class="fas fa-money-bill-wave fa-4x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- مخطط المصروفات اليومية -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">اتجاه المصروفات اليومية</h5>
            </div>
            <div class="card-body">
                <canvas id="dailyChart" style="height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <!-- أعلى أماكن الصرف -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">أعلى أماكن الصرف</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var location in ViewBag.TopLocations)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@location.Location</strong>
                                <br />
                                <small class="text-muted">
                                    @location.Count عملية
                                </small>
                            </div>
                            <span class="badge bg-danger rounded-pill">
                                @location.Amount.ToString("N2") ريال
                            </span>
                        </div>
                    }
                    @if (ViewBag.TopLocations.Count == 0)
                    {
                        <div class="list-group-item text-center text-muted">
                            لا توجد بيانات متاحة
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- قائمة العمليات -->
<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">جميع العمليات</h5>
        <button class="btn btn-sm btn-outline-primary" onclick="window.print()">
            <i class="fas fa-print me-2"></i>طباعة
        </button>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>التاريخ</th>
                        <th>الوصف (المكان)</th>
                        <th class="text-end">المبلغ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in ViewBag.Transactions)
                    {
                        <tr>
                            <td>@t.Date.ToString("dd MMM yyyy")</td>
                            <td>@t.Description</td>
                            <td class="text-end text-danger fw-bold">
                                @t.Amount.ToString("N2") ريال
                            </td>
                        </tr>
                    }
                    @if (ViewBag.Transactions.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                لا توجد عمليات في هذه الفترة
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-light">
                    <tr>
                        <th colspan="2" class="text-end">الإجمالي:</th>
                        <th class="text-end text-danger">
                            @ViewBag.TotalSpent.ToString("N2") ريال
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const dailyData = @Html.Raw(Json.Serialize(ViewBag.DailySummary));

        new Chart(document.getElementById('dailyChart'), {
            type: 'bar',
            data: {
                labels: dailyData.map(d => new Date(d.date).toLocaleDateString('ar-SA')),
                datasets: [{
                    label: 'المصروف اليومي',
                    data: dailyData.map(d => d.amount),
                    backgroundColor: '#e74a3b',
                    borderColor: '#e74a3b',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toFixed(2) + ' ريال';
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y.toFixed(2) + ' ريال';
                            }
                        }
                    }
                }
            }
        });
    </script>
}