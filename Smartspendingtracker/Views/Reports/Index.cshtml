@model SpendingTracker.Models.ViewModels.ReportViewModel
@{
    ViewData["Title"] = "Reports";
}

<h2 class="mb-4">Financial Reports</h2>

<!-- Filters -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.Id" selected="@(Model.CategoryId == cat.Id)">@cat.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Generate Report</button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-uppercase">Total Income</h6>
                        <h3>$@Model.TotalIncome.ToString("N2")</h3>
                    </div>
                    <i class="fas fa-arrow-up fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-danger text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-uppercase">Total Expense</h6>
                        <h3>$@Model.TotalExpense.ToString("N2")</h3>
                    </div>
                    <i class="fas fa-arrow-down fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="text-uppercase">Net Savings</h6>
                        <h3>$@Model.NetSavings.ToString("N2")</h3>
                    </div>
                    <i class="fas fa-piggy-bank fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Category Breakdown -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">Category Breakdown</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="reportCategoryChart"></canvas>
                </div>
                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Amount</th>
                                <th>%</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cat in Model.CategorySummaries)
                            {
                                <tr>
                                    <td>
                                        <span class="badge" style="background-color: @cat.Color">@cat.CategoryName</span>
                                    </td>
                                    <td>$@cat.Amount.ToString("N2")</td>
                                    <td>@cat.PercentageOfTotal.ToString("N1")%</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Trend -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">Daily Trend</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="dailyTrendChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transaction List -->
<div class="card shadow">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Transaction Details</h5>
        <button class="btn btn-sm btn-outline-primary" onclick="window.print()">
            <i class="fas fa-print me-2"></i>Print Report
        </button>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th class="text-end">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Transactions)
                    {
                        <tr>
                            <td>@t.Date.ToString("MMM dd")</td>
                            <td>@t.Category.Name</td>
                            <td>@t.Description</td>
                            <td class="text-end @(t.Category.IsExpense ? "text-danger" : "text-success")">
                                @(t.Category.IsExpense ? "-" : "+")$@t.Amount.ToString("N2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Category Chart
        new Chart(document.getElementById('reportCategoryChart'), {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CategorySummaries.Select(c => c.CategoryName))),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.CategorySummaries.Select(c => c.Amount))),
                    backgroundColor: @Html.Raw(Json.Serialize(Model.CategorySummaries.Select(c => c.Color)))
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });

        // Daily Trend Chart
        new Chart(document.getElementById('dailyTrendChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.DailySummaries.Select(d => d.Date.ToString("MMM dd")))),
                datasets: [{
                    label: 'Income',
                    data: @Html.Raw(Json.Serialize(Model.DailySummaries.Select(d => d.Income))),
                    backgroundColor: '#1cc88a'
                }, {
                    label: 'Expense',
                    data: @Html.Raw(Json.Serialize(Model.DailySummaries.Select(d => d.Expense))),
                    backgroundColor: '#e74a3b'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}