@{
    ViewData["Title"] = "تقارير المصروفات";
}

<h4 class="mb-3">تقارير المصروفات</h4>

<!-- Filters -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2">

            <div class="col-12 col-md-4">
                <label class="form-label small">من تاريخ</label>
                <input type="date"
                       name="startDate"
                       class="form-control form-control-sm"
                       value="@ViewBag.StartDate.ToString("yyyy-MM-dd")" />
            </div>

            <div class="col-12 col-md-4">
                <label class="form-label small">إلى تاريخ</label>
                <input type="date"
                       name="endDate"
                       class="form-control form-control-sm"
                       value="@ViewBag.EndDate.ToString("yyyy-MM-dd")" />
            </div>

            <div class="col-12 col-md-4 d-flex align-items-end">
                <button type="submit"
                        class="btn btn-primary w-100 btn-sm">
                    عرض التقرير
                </button>
            </div>

        </form>
    </div>
</div>

<!-- Summary Card -->
<div class="card bg-black text-white mb-3 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">

            <div>
                <div class="small opacity-75">إجمالي المصروفات</div>
                <h4 class="mb-1">
                    @ViewBag.TotalSpent.ToString("N2") ريال
                </h4>
                <div class="small">
                    @ViewBag.StartDate.ToString("dd-MM-yyyy")
                    -
                    @ViewBag.EndDate.ToString("dd-MM-yyyy")
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <!-- Chart -->
    <div class="col-12 col-lg-8 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-[#121212]">
                <strong>اتجاه المصروف اليومي</strong>
            </div>
            <div class="card-body">
                <canvas id="dailyChart" style="height:250px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Locations -->
    <div class="col-12 col-lg-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-[#121212]">
                <strong>أعلى أماكن الصرف</strong>
            </div>
            <div class="card-body p-2">

                @if (ViewBag.TopLocations.Count == 0)
                {
                    <div class="text-center text-muted py-3">
                        لا توجد بيانات
                    </div>
                }

                @foreach (var location in ViewBag.TopLocations)
                {
                    <div class="card mb-2 border-0 shadow-sm">
                        <div class="card-body p-2 d-flex justify-content-between">
                            <div>
                                <strong>@location.Location</strong>
                                <div class="small text-muted">
                                    @location.Count عملية
                                </div>
                            </div>
                            <span class="text-danger fw-bold">
                                @location.Amount.ToString("N2") ريال
                            </span>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</div>

<!-- Transactions List -->
<div class="card shadow-sm">
    <div class="card-header bg-[#121212] d-flex justify-content-between">
        <strong>جميع العمليات</strong>
        <button class="btn btn-sm btn-outline-primary" onclick="window.print()">
            طباعة
        </button>
    </div>

    <!-- Desktop Table -->
    <div class="d-none d-md-block">
        <div class="table-responsive">
            <table class="table table-hover table-dark mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>التاريخ</th>
                        <th>الوصف</th>
                        <th class="text-end">المبلغ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in ViewBag.Transactions)
                    {
                        <tr>
                            <td>@t.Date.ToString("dd MMM yyyy")</td>
                            <td>@t.Description</td>
                            <td class="text-end text-danger fw-bold">
                                @t.Amount.ToString("N2") ريال
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Cards -->
    <div class="d-md-none p-2">

        @foreach (var t in ViewBag.Transactions)
        {
            <div class="card mb-2 shadow-sm">
                <div class="card-body p-2">

                    <div class="d-flex justify-content-between">
                        <strong>@t.Description</strong>
                        <span class="text-danger fw-bold">
                            @t.Amount.ToString("N2") ريال
                        </span>
                    </div>

                    <div class="small text-muted mt-1">
                        @t.Date.ToString("dd MMM yyyy")
                    </div>

                </div>
            </div>
        }

        @if (ViewBag.Transactions.Count == 0)
        {
            <div class="text-center text-muted py-3">
                لا توجد عمليات في هذه الفترة
            </div>
        }

    </div>
</div>