<!DOCTYPE html>
<html lang="ar" dir="rtl" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - متتبع المصروفات</title>


    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <!-- Meta Description -->
    <meta name="description" content="@(ViewData["Description"] ?? "متتبع المصروفات الذكي - تطبيق ويب سهل لإدارة وتتبع مصروفاتك اليومية والشهرية بشكل احترافي")">
    <meta name="keywords" content="متتبع المصروفات, إدارة المال, تتبع النفقات, ميزانية, مصروفات">
    <meta name="author" content="متتبع المصروفات">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="@(ViewData["OgUrl"] ?? "https://moneyspending.runasp.net/")">
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] + " - متتبع المصروفات")">
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? "متتبع المصروفات الذكي - تطبيق ويب سهل لإدارة وتتبع مصروفاتك اليومية والشهرية")">
    <meta property="og:image" content="@(ViewData["OgImage"] ?? "~/images/apple-touch-icon.png")">
    <meta property="og:locale" content="ar_SA">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="@(ViewData["OgUrl"] ?? "https://moneyspending.runasp.net/")">
    <meta name="twitter:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] + " - متتبع المصروفات")">
    <meta name="twitter:description" content="@(ViewData["OgDescription"] ?? "متتبع المصروفات الذكي - تطبيق ويب سهل لإدارة وتتبع مصروفاتك اليومية والشهرية")">
    <meta name="twitter:image" content="@(ViewData["OgImage"] ?? "~/images/apple-touch-icon.png")">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background-color: #121212; /* خلفية داكنة */
            color: #e0e0e0; /* نص فاتح */
        }

        .sidebar {
            min-height: 100vh;
            background-color: #1c1c1c; /* داكن جدا */
            color: #ddd;
        }

            .sidebar .nav-link {
                color: #ccc;
                padding: 1rem;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: rgba(255,255,255,0.1);
                }

                .sidebar .nav-link i {
                    margin-left: 10px;
                }

                .card, .table {
                background-color: #1e1e1e; /* داكن */
                color: #e0e0e0; /* نص فاتح */
                border: 1px solid #2a2a2a;
            }

            .card-header {
                background-color: #252525;
                border-bottom: 1px solid #2a2a2a;
            }

        /* Mobile Bottom Navigation */
        .navbar.fixed-bottom {
            z-index: 1030;
        }

        /* Wider Mobile Sidebar */
        .offcanvas-mobile {
            width: 80% !important;
            max-width: 320px;
        }

            .offcanvas-mobile .nav-link {
                font-size: 1.1rem;
                display: flex;
                align-items: center;
            }

                .offcanvas-mobile .nav-link.active {
                    background-color: rgba(59, 130, 246, 0.2);
                    border-right: 4px solid #3b82f6;
                }

        /* Add padding to body for fixed bottom nav */
        @@media (max-width: 767px) {
            body {
                padding-bottom: 65px;
            }
        }

        /* Improve touch target size */
        .nav-link i {
            min-width: 30px;
        }

    </style>
</head>

<body>

    <!-- 🔥 Improved Mobile Navbar - Fixed at Bottom -->
    <nav class="navbar navbar-dark bg-dark shadow-sm d-md-none fixed-bottom px-3 py-2">
        <button class="btn btn-link text-white p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
            <i class="fas fa-bars fa-2x"></i>
        </button>

        <span class="fw-bold flex-grow-1 text-center">
            <i class="fas fa-wallet ms-1"></i>
            متتبع المصروفات
        </span>

        <a asp-controller="Settings" asp-action="Index" class="btn btn-link text-white p-0">
            <i class="fas fa-cog fa-2x"></i>
        </a>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- 💻 Desktop Sidebar -->
            <div class="col-md-2 sidebar p-0 d-none d-md-block">
                <div class="p-4 text-center">
                    <h5>
                        <i class="fas fa-wallet ms-2"></i>
                        متتبع المصروفات
                    </h5>
                </div>

                <nav class="nav flex-column">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> لوحة التحكم
                    </a>

                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transactions" ? "active" : "")"
                       asp-controller="Transactions" asp-action="Index">
                        <i class="fas fa-list"></i> العمليات
                    </a>

                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
                       asp-controller="Reports" asp-action="Index">
                        <i class="fas fa-chart-bar"></i> التقارير
                    </a>

                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")"
                       asp-controller="Settings" asp-action="Index">
                        <i class="fas fa-cog"></i> الإعدادات
                    </a>
                </nav>
            </div>

            <!-- 📱 Mobile Offcanvas Menu - Wider and with swipe -->
            <div class="offcanvas offcanvas-start text-bg-dark offcanvas-mobile" tabindex="-1" id="mobileMenu">
                <div class="offcanvas-header border-bottom">
                    <h5 class="offcanvas-title">
                        <i class="fas fa-wallet ms-2"></i>
                        متتبع المصروفات
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
                </div>

                <div class="offcanvas-body p-0">
                    <nav class="nav flex-column">
                        <a class="nav-link p-3 border-bottom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home ms-2 fa-lg"></i>
                            <span class="me-2">لوحة التحكم</span>
                        </a>

                        <a class="nav-link p-3 border-bottom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transactions" ? "active" : "")"
                           asp-controller="Transactions" asp-action="Index">
                            <i class="fas fa-list ms-2 fa-lg"></i>
                            <span class="me-2">العمليات</span>
                        </a>

                        <a class="nav-link p-3 border-bottom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
                           asp-controller="Reports" asp-action="Index">
                            <i class="fas fa-chart-bar ms-2 fa-lg"></i>
                            <span class="me-2">التقارير</span>
                        </a>

                        <a class="nav-link p-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")"
                           asp-controller="Settings" asp-action="Index">
                            <i class="fas fa-cog ms-2 fa-lg"></i>
                            <span class="me-2">الإعدادات</span>
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>