<!DOCTYPE html>
<html lang="ar" dir="rtl" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>@ViewData["Title"] - متتبع المصروفات</title>

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#1c1c1c" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="متتبع المصروفات" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            padding-bottom: 80px;
        }

        /* Desktop Sidebar */
        .sidebar {
            min-height: 100vh;
            background-color: #1c1c1c;
            color: #ddd;
            position: fixed;
            top: 0;
            right: 0;
            width: 250px;
        }

            .sidebar .nav-link {
                color: #ccc;
                padding: 1rem;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: rgba(255,255,255,0.1);
                }

                .sidebar .nav-link i {
                    margin-left: 10px;
                }

        /* Desktop Content */
        .main-content {
            margin-right: 250px;
            padding: 2rem;
        }

        /* Cards */
        .card {
            background-color: #1e1e1e;
            color: #e0e0e0;
            border: 1px solid #2a2a2a;
        }

        .card-header {
            background-color: #252525;
            border-bottom: 1px solid #2a2a2a;
        }

        /* Mobile Bottom Nav */
        .mobile-bottom-nav {
            display: none;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: #1c1c1c;
            border-top: 1px solid #2a2a2a;
            z-index: 1030;
            padding: 0.5rem 0;
        }

            .mobile-bottom-nav a {
                flex: 1;
                text-align: center;
                color: #ccc;
                text-decoration: none;
                padding: 0.5rem;
            }

                .mobile-bottom-nav a.active {
                    color: #3b82f6;
                }

                .mobile-bottom-nav a i {
                    display: block;
                    font-size: 1.3rem;
                    margin-bottom: 0.25rem;
                }

                .mobile-bottom-nav a span {
                    display: block;
                    font-size: 0.7rem;
                }

        /* Mobile Header */
        .mobile-header {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: #1c1c1c;
            border-bottom: 1px solid #2a2a2a;
            z-index: 1029;
            padding: 0.75rem 1rem;
        }

        /* Mobile Styles */
        @@media (max-width: 767px) {
            .sidebar {
                display: none;
            }

            .main-content {
                margin-right: 0;
                padding: 1rem;
                padding-top: 70px;
                padding-bottom: 90px;
            }

            .mobile-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .mobile-bottom-nav {
                display: flex;
            }

            .card {
                border-radius: 12px;
                margin-bottom: 1rem;
            }

            .btn {
                border-radius: 8px;
            }
            /* PWA Standalone Mode */
            @@supports (padding: max(0px)) {
                .mobile-header {
                    padding-top: max(0.75rem, env(safe-area-inset-top));
                }

                .mobile-bottom-nav {
                    padding-bottom: max(0.5rem, env(safe-area-inset-bottom));
                }

                .main-content {
                    padding-top: calc(70px + env(safe-area-inset-top));
                    padding-bottom: calc(90px + env(safe-area-inset-bottom));
                }
            }
        }

        /* Offcanvas */
        .offcanvas {
            background-color: #1c1c1c;
            width: 280px !important;
        }

        .offcanvas-header {
            border-bottom: 1px solid #2a2a2a;
        }

        .offcanvas .nav-link {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #2a2a2a;
            color: #ccc;
        }

            .offcanvas .nav-link.active {
                background-color: rgba(59, 130, 246, 0.2);
                color: #3b82f6;
                border-right: 4px solid #3b82f6;
            }

            .offcanvas .nav-link i {
                margin-left: 1rem;
                width: 25px;
            }

        /* Gradient */
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
</head>

<body>
    <!-- Desktop Sidebar -->
    <div class="sidebar d-none d-md-block">
        <div class="p-4 text-center border-bottom">
            <h5>
                <i class="fas fa-wallet ms-2"></i>
                متتبع المصروفات
            </h5>
        </div>

        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
               asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i> لوحة التحكم
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transactions" ? "active" : "")"
               asp-controller="Transactions" asp-action="Index">
                <i class="fas fa-list"></i> العمليات
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
               asp-controller="Reports" asp-action="Index">
                <i class="fas fa-chart-bar"></i> التقارير
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")"
               asp-controller="Settings" asp-action="Index">
                <i class="fas fa-cog"></i> الإعدادات
            </a>
        </nav>
    </div>

    <!-- Mobile Header -->
    <div class="mobile-header d-md-none">
        <button class="btn btn-link text-white p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
            <i class="fas fa-bars fa-lg"></i>
        </button>

        <h5 class="text-white mb-0">
            <i class="fas fa-wallet ms-1"></i>
            متتبع المصروفات
        </h5>

        <a asp-controller="Settings" asp-action="Index" class="btn btn-link text-white p-0">
            <i class="fas fa-cog fa-lg"></i>
        </a>
    </div>

    <!-- Mobile Offcanvas -->
    <div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="mobileMenu">
        <div class="offcanvas-header">
            <h5 class="text-white">
                <i class="fas fa-wallet ms-2"></i>
                القائمة
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>

        <div class="offcanvas-body p-0">
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                   asp-controller="Home" asp-action="Index" data-bs-dismiss="offcanvas">
                    <i class="fas fa-home"></i>
                    <span>لوحة التحكم</span>
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transactions" ? "active" : "")"
                   asp-controller="Transactions" asp-action="Index" data-bs-dismiss="offcanvas">
                    <i class="fas fa-list"></i>
                    <span>العمليات</span>
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
                   asp-controller="Reports" asp-action="Index" data-bs-dismiss="offcanvas">
                    <i class="fas fa-chart-bar"></i>
                    <span>التقارير</span>
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")"
                   asp-controller="Settings" asp-action="Index" data-bs-dismiss="offcanvas">
                    <i class="fas fa-cog"></i>
                    <span>الإعدادات</span>
                </a>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Mobile Bottom Nav -->
    <div class="mobile-bottom-nav d-md-none">
        <a asp-controller="Home" asp-action="Index"
           class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
            <i class="fas fa-home"></i>
            <span>الرئيسية</span>
        </a>

        <a asp-controller="Transactions" asp-action="Index"
           class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Transactions" && ViewContext.RouteData.Values["Action"]?.ToString() != "Create" ? "active" : "")">
            <i class="fas fa-list"></i>
            <span>العمليات</span>
        </a>

        <a asp-controller="Transactions" asp-action="Create"
           class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
            <i class="fas fa-plus-circle"></i>
            <span>إضافة</span>
        </a>

        <a asp-controller="Reports" asp-action="Index"
           class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")">
            <i class="fas fa-chart-bar"></i>
            <span>التقارير</span>
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- PWA Service Worker -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(reg => console.log('✅ SW registered'))
                    .catch(err => console.log('❌ SW failed', err));
            });
        }
    </script>
</body>
</html>