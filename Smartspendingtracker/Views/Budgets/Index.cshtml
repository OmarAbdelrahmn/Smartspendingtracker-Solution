@model IEnumerable<SpendingTracker.Controllers.BudgetViewModel>
@{
    ViewData["Title"] = "Budgets";
    var months = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames
        .Take(12).Select((m, i) => new { Value = i + 1, Text = m }).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Budget Management</h2>
    <div class="d-flex gap-2">
        <select id="monthSelect" class="form-select" style="width: auto;">
            @foreach (var m in months)
            {
                <option value="@m.Value" selected="@(m.Value == ViewBag.Month)">@m.Text</option>
            }
        </select>
        <select id="yearSelect" class="form-select" style="width: auto;">
            @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 2; y++)
            {
                <option value="@y" selected="@(y == ViewBag.Year)">@y</option>
            }
        </select>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Set New Budget</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <input type="hidden" name="month" value="@ViewBag.Month" />
                    <input type="hidden" name="year" value="@ViewBag.Year" />

                    <div class="mb-3">
                        <label class="form-label">Category (Optional)</label>
                        <select name="categoryId" class="form-select">
                            <option value="">Overall Budget</option>
                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Budget Amount ($)</label>
                        <input type="number" name="amount" class="form-control" step="0.01" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea name="notes" class="form-control" rows="2"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Create Budget</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">@(item.Budget.Category?.Name ?? "Overall Budget")</h5>
                                    <small class="text-muted">@item.Budget.Notes</small>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-link" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <button class="dropdown-item" data-bs-toggle="modal"
                                                    data-bs-target="#editModal@(item.Budget.Id)">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </button>
                                        </li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@item.Budget.Id" method="post"
                                                  onsubmit="return confirm('Delete this budget?');">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="fas fa-trash me-2"></i>Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Progress</span>
                                    <span class="@(item.PercentageUsed > 100 ? "text-danger" : "text-success")">
                                        @item.PercentageUsed.ToString("N1")%
                                    </span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar @(item.PercentageUsed > 100 ? "bg-danger" : "bg-success")"
                                         role="progressbar" style="width: @Math.Min(item.PercentageUsed, 100)%"></div>
                                </div>
                            </div>

                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="text-muted small">Budget</div>
                                    <div class="fw-bold">$@item.Budget.Amount.ToString("N0")</div>
                                </div>
                                <div class="col-4">
                                    <div class="text-muted small">Spent</div>
                                    <div class="fw-bold text-danger">$@item.Spent.ToString("N0")</div>
                                </div>
                                <div class="col-4">
                                    <div class="text-muted small">Left</div>
                                    <div class="fw-bold @(item.Remaining < 0 ? "text-danger" : "text-success")">
                                        $@item.Remaining.ToString("N0")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Modal -->
                <div class="modal fade" id="editModal@(item.Budget.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="Edit" method="post">
                                <input type="hidden" name="id" value="@item.Budget.Id" />
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit Budget</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Amount ($)</label>
                                        <input type="number" name="amount" class="form-control"
                                               value="@item.Budget.Amount" step="0.01" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Notes</label>
                                        <textarea name="notes" class="form-control" rows="2">@item.Budget.Notes</textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('monthSelect').addEventListener('change', updatePeriod);
        document.getElementById('yearSelect').addEventListener('change', updatePeriod);

        function updatePeriod() {
            const month = document.getElementById('monthSelect').value;
            const year = document.getElementById('yearSelect').value;
            window.location.href = `?month=${month}&year=${year}`;
        }
    </script>
}