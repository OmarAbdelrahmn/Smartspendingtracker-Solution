@using SpendingTracker.Helpers

@{
    ViewData["Title"] = "لوحة التحكم";

    var settings = ViewBag.Settings as Smartspendingtracker.Models.UserSettings;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>لوحة التحكم</h2>
    <span class="text-muted">@DateTime.Now.ToString("dd-MM-yyyy")</span>
</div>

<!-- بطاقات الإحصائيات -->
<div class="row mb-4">
    <div class="col-md-6 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <h6 class="text-uppercase text-muted mb-2">إجمالي المصروفات</h6>
                <h2 class="text-primary mb-0">@CurrencyHelper.FormatAmount(ViewBag.TotalSpent, settings)</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <h6 class="text-uppercase text-muted mb-2">مصروفات هذا الشهر</h6>
                <h2 class="text-primary mb-0">@CurrencyHelper.FormatAmount(ViewBag.MonthlySpent, settings)</h2>
            </div>
        </div>
    </div>
</div>

<!-- آخر العمليات -->
<div class="card">
    <div class="card-header bg-[#121212] d-flex justify-content-between align-items-center">
        <h5 class="mb-0">أحدث العمليات</h5>
        <a asp-controller="Transactions" asp-action="Index" class="btn btn-sm btn-primary">عرض الكل</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>التاريخ</th>
                        <th>الوصف</th>
                        <th class="text-end">المبلغ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in ViewBag.RecentTransactions)
                    {
                        <tr>
                            <td>@transaction.Date.ToString("dd-MM-yyyy")</td>
                            <td>@transaction.Description</td>
                            <td class="text-end text-danger">
                            @CurrencyHelper.FormatAmount(transaction.Amount, settings)
                            </td>
                        </tr>
                    }
                    @if (ViewBag.RecentTransactions.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                لا توجد عمليات حتى الآن
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<a asp-controller="Transactions" asp-action="Create"
   class="btn btn-primary w-100 py-3 d-flex justify-content-center align-items-center mt-5">
    <i class="fas fa-plus me-2"></i> إضافة عملية جديدة
</a>