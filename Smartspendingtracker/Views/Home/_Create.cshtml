@model CreateExpenseViewModel

@{
    ViewData["Title"] = "Add Expense";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Add Expense Manually
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Tip:</strong> You can also add expenses quickly using the chat panel on the right!
                    </div>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Amount -->
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>
                                Amount <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Amount"
                                   class="form-control form-control-lg"
                                   placeholder="Enter amount (e.g., 50.00)"
                                   step="0.01"
                                   min="0.01"
                                   max="999999.99" />
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <!-- Currency -->
                        <div class="mb-3">
                            <label asp-for="Currency" class="form-label">
                                <i class="fas fa-money-bill-wave me-1"></i>
                                Currency <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Currency" class="form-select">
                                <option value="EGP">EGP - Egyptian Pound (جنيه مصري)</option>
                                <option value="SAR">SAR - Saudi Riyal (ريال سعودي)</option>
                            </select>
                            <span asp-validation-for="Currency" class="text-danger small"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">
                                <i class="fas fa-tag me-1"></i>
                                Category <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in ViewBag.Categories as List<Category>)
                                {
                                    <option value="@category.Id">
                                        @category.NameEnglish (@category.NameArabic)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-1"></i>
                                Description <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Enter a description for this expense"
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">
                                <span id="charCount">0</span> / 500 characters
                            </div>
                        </div>

                        <!-- Date -->
                        <div class="mb-4">
                            <label asp-for="Date" class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Date"
                                   type="datetime-local"
                                   class="form-control"
                                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Save Expense
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Examples -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-lightbulb me-2"></i>
                        Examples
                    </h6>
                    <ul class="mb-0 small">
                        <li>Lunch at restaurant - 150 EGP</li>
                        <li>Monthly rent - 5000 EGP</li>
                        <li>Coffee - 15 SAR</li>
                        <li>Electricity bill - 300 EGP</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Character counter for description
        const descriptionField = document.querySelector('textarea[name="Description"]');
        const charCountSpan = document.getElementById('charCount');

        if (descriptionField && charCountSpan) {
            descriptionField.addEventListener('input', function() {
                charCountSpan.textContent = this.value.length;
            });

            // Initialize count
            charCountSpan.textContent = descriptionField.value.length;
        }

        // Form validation feedback
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            });
        }

        // Auto-focus on amount field
        document.querySelector('input[name="Amount"]')?.focus();
    </script>
}
